include ../../mixins/all

mixin article-no-image(items)
  each item in items
    .listing-item
      .info
        h4.title-default Deep Dive article headline goes here and can wrap onto two lines like this
        p.text-small.text-2 By Paul McIntrye - Executive Editor
        p.publish-time
          span 07 March 2019
          span 8min read

+article-no-image([{src: 'images/upload/thumb-1.jpg'},
              {src: 'images/upload/thumb-2.jpg'},
              {src: 'images/upload/thumb-3.jpg'}])
