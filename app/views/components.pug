extends layouts/template

block vars
  -title = 'All components'
  -bodyClass = ''


block container
  .tab-vertical(data-tab)
    ul
      li
        a(href='#tab-1') Typography
      li
        a(href='#tab-2') Component wrapper
      li
        a(href='#tab-3') Richtext
      li
        a(href='#tab-4') Thumbnail
      li
        a(href='#tab-5') Carousel
      li
        a(href='#tab-6') Listing
    #tab-1
      include style-guide
    #tab-2
      .cmp-wrapper
        include components/cards/card-3
      .cmp-wrapper.has-bgd.bgd-1
        include components/cards/card-3
      .cmp-wrapper.has-bgd.bgd-1 
        .cmp-slider-left
          h2.title-main-2.text-2.mb-5 Related product
          include components/carousel/slider-left-side

    #tab-3
      include components/paragraph
    #tab-4
      h4 Style 1
      include components/cards/card-1
      br
      hr
      h4 Style 2
      .inner-container
        .row
          .col-sm-6.col-md-4
            include components/cards/card-2
          .col-sm-6.col-md-4
            include components/cards/card-2
          .col-sm-6.col-md-4
            include components/cards/card-2
      br
      .inner-container
        .row
          .col-sm-6
            +card-media('images/upload/photo-large-7.jpg')
          .col-sm-6
            +card-media('images/upload/photo-large-8.jpg')
      br
      .inner-container
        .row
          .col-sm-3
            +card-media-small()
          .col-sm-3
            +card-media-small('images/upload/photo-large-4.jpg')
          .col-sm-3
            +card-media-small('images/upload/photo-large-5.jpg')
          .col-sm-3
            +card-media-small('images/upload/photo-large-6.jpg')
      br
      hr
      h4 Style 3
      include components/cards/card-3
      
      br
      .inner-container
        +card-3-style-2.style-2()
  
    #tab-5
      h4 Style 1
      include components/carousel/carousel-animation
      br
      hr
      h4 Style 2
      .cmp-slider-left
        include components/carousel/slider-left-side
      br
      hr
      h4 Style 2
      include components/carousel/slider-center
    #tab-6
      .row
        .col-md-8
          include components/listing/article-image
        .col-md-4
          include components/listing/article-no-image
        .col-md-4
          include components/listing/brief
          